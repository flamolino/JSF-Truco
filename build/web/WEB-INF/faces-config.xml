<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
              version="2.2">

    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>

        <navigation-case>
            <from-outcome>go-to-main</from-outcome>
            <to-view-id>main.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>go-to-cad-user</from-outcome>
            <to-view-id>cadastro_usuario.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/cadastro_usuario.xhtml</from-view-id>

        <navigation-case>
            <from-outcome>go-to-main</from-outcome>
            <to-view-id>main.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>go-to-index</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/dupla.xhtml</from-view-id>

        <navigation-case>
            <from-outcome>go-to-inputText</from-outcome>
            <to-view-id>inputText.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/main.xhtml</from-view-id>

        <navigation-case>
            <from-outcome>go-to-torneio</from-outcome>
            <to-view-id>torneio.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>go-to-dupla</from-outcome>
            <to-view-id>dupla.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>go-to-perfil</from-outcome>
            <to-view-id>perfil.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>*</from-view-id>

        <navigation-case>
            <from-outcome>go-to-torneio</from-outcome>
            <to-view-id>torneio.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>go-to-dupla</from-outcome>
            <to-view-id>dupla.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>go-to-main</from-outcome>
            <to-view-id>main.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>go-to-perfil</from-outcome>
            <to-view-id>perfil.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

    </navigation-rule>

    <navigation-rule>
        <from-view-id>/torneio.xhtml</from-view-id>

        <navigation-case>
            <from-outcome>go-to-torneio_detalhado</from-outcome>
            <to-view-id>torneio_detalhado.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>go-to-cadastro_torneio</from-outcome>
            <to-view-id>cadastro_torneio.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/cadastro_torneio.xhtml</from-view-id>

        <navigation-case>
            <from-outcome>go-to-torneio</from-outcome>
            <to-view-id>torneio.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
        <navigation-rule>
        <from-view-id>/perfil.xhtml</from-view-id>

        <navigation-case>
            <from-outcome>go-to-inputText</from-outcome>
            <to-view-id>inputText.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

</faces-config>